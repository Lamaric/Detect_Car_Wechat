/* tabBar总体 */
.tab-bar{
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
  /* padding-bottom: env(safe-area-inset-bottom); */
  position: fixed;
  left: 0;
  bottom: 0;
}
/* 背景图片 */
.tab-bar-bg{
  display: flex;
  position: absolute;
  width: 100%;
  height: 100px;
  z-index: -1;
}
/* 背景一条线 */
.tab-bar-bg-view{
  width: 100%;
  height: 1px;
  background:  rgba(0, 0, 0, 0.33);
  position: absolute;
  top: 43px;
  z-index: -1;
}
/* tabBar内容快 */
.tab-bar-index{
  display: flex;
  flex: 1;
  font-size: 30rpx;
  height: 60px;
  margin-top: 55px;
  z-index: 1;
}
/* tarBar添加发布单独内容快 */
.tab-bar-index-add{
  display: flex;
  flex: 1;
  font-size: 30rpx;
  z-index: 1;
  height: 100px;
}
/* 图标字体结合内容快 */
.tab-bar-icon{
  width: 100%;
  height: 45px;
  margin-top: 5px;
  display: flex;
  flex-direction: column;
}
/* 图标字体结合内容快添加发布单独设置 */
.tab-bar-icon_add{
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: column;
}
/* 内容快图片 */
.tab-bar-img{
  width: 25px;
  height: 25px;
  margin: 0 auto;
}
/* 内容快添加发布单独图片设置 */
.tab-bar-img-add{
  width: 80px;
  height: 80px;
  margin: 0 auto;
  padding-left: 9rpx;
}
/* 内容快挤位置 */
.tab-bar-tmp{
  width: 100%;
  height: 3.5px;
}
/* 内容快文字 */
.tab-bar-text{
  width: 40px;
  text-align: center;
  font-size: 12px;
  margin: 0 auto;
}