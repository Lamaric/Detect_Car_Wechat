<!-- 个人信息页面
显示用户名、头像、和其余系列信息
 -->
<!-- 背景图片 -->
<image class='background' src="../picture/bg.png" mode="aspectFill"></image>


<view class="container">
<image src="https://lamaric.goho.co/media/icon/icon_my.png " class="title" mode="aspectFit"></image>

  <!-- 显示用户头像和昵称 -->

  <view class="perk">
    <view class="txbox">
    <open-data type="userAvatarUrl" class="tx"></open-data>
    </view>
    <view class="textbox">
    <open-data type="userNickName" class="perinf"></open-data> 
    <text style="color:white">\nDeecamp车险</text>
    </view>
  
  </view>
<!-- 显示系列信息选项 -->
<!-- 驾驶证 -->
  <view class="xxk">
